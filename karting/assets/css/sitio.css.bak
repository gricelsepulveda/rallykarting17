/*** SCROLL ****/



.simply-scroll-container { 

	position: relative;

}

.simply-scroll-clip { 

	position: relative;

	overflow: hidden;

}



.simply-scroll-list { 

	overflow: hidden;

	margin: 0;

	padding: 0;

	list-style: none;

}	

.simply-scroll-list li {

	padding: 0;

	margin: 0;

	list-style: none;

}	

.simply-scroll-list li img {

	border: none;

	display: block;

}

.simply-scroll-btn {

	position: absolute;	

	width: 9px;

	height: 40px;

	z-index:3;

	cursor: pointer;

}

.simply-scroll-btn-right {

	right: 6px;

	bottom: 40px;	

	background-image: url(../img/der.png);

}	

.simply-scroll-btn-left {

	left: 6px;

	bottom: 40px;

	background-image: url(../img/izq.png);

}

.simply-scroll-btn-left.disabled {

	display: none;

}

.simply-scroll-btn-right.disabled {

	display: none;	

}



.simply-scroll { 

	width: 800px;

	height: 100px;	

	float: left;

}

.simply-scroll .simply-scroll-clip {

	width: 745px;

	height: 100px;

	margin-left: 25px;

}

.simply-scroll .simply-scroll-list div {

	float: left; /* Horizontal scroll only */

	width: 160px;

	height: 90px;	

}

